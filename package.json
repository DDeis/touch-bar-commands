{
	"name": "touch-bar-commands",
	"displayName": "Touch Bar Commands",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.37.0"
	},
	"categories": [
		"Keymaps"
	],
	"activationEvents": [
		"onCommand:touch-bar-commands.execute.cmd1",
		"onCommand:touch-bar-commands.execute.cmd2",
		"onCommand:touch-bar-commands.execute.cmd3",
		"onCommand:touch-bar-commands.execute.cmd4"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
		{
			"command": "touch-bar-commands.execute.cmd1",
			"title": "✎1",
			"when": "config.touch-bar-commands.activate.cmd1",
			"category": "Touch Bar Commands"
		},
		{
			"command": "touch-bar-commands.execute.cmd2",
			"title": "✎2",
			"when": "config.touch-bar-commands.activate.cmd2",
			"category": "Touch Bar Commands"
		},
		{
			"command": "touch-bar-commands.execute.cmd3",
			"title": "✎3",
			"when": "config.touch-bar-commands.activate.cmd3",
			"category": "Touch Bar Commands"
		},
		{
			"command": "touch-bar-commands.execute.cmd4",
			"title": "✎4",
			"when": "config.touch-bar-commands.activate.cmd4",
			"category": "Touch Bar Commands"
		}
	],
		"menus": {
			"touchBar": [
				{
					"command": "touch-bar-commands.execute.cmd1",
					"when": "config.touch-bar-commands.activate.cmd1"
				},
				{
					"command": "touch-bar-commands.execute.cmd2",
					"when": "config.touch-bar-commands.activate.cmd2"
				},
				{
					"command": "touch-bar-commands.execute.cmd3",
					"when": "config.touch-bar-commands.activate.cmd3"
				},
				{
					"command": "touch-bar-commands.execute.cmd4",
					"when": "config.touch-bar-commands.activate.cmd4"
				}
			]
		},
		"configuration": [
			{
				"type": "object",
				"title": "Touch Bar Commands",
				"properties": {
					"touch-bar-commands.activate.cmd1": {
						"type": "boolean",
						"default": true,
						"description": "Show button for command 1"
					},
					"touch-bar-commands.activate.cmd2": {
						"type": "boolean",
						"default": true,
						"description": "Show button for command 2"
					},
					"touch-bar-commands.activate.cmd3": {
						"type": "boolean",
						"default": false,
						"description": "Show button for command 3"
					},
					"touch-bar-commands.activate.cmd4": {
						"type": "boolean",
						"default": false,
						"description": "Show button for command 4"
					},
					"touch-bar-commands.command.1": {
						"type": "string",
						"default": "pwd"
					},
					"touch-bar-commands.command.2": {
						"type": "string",
						"default": "whoami"
					},

					"touch-bar-commands.command.3": {
						"type": "string",
						"default": ""
					},
					"touch-bar-commands.command.4": {
						"type": "string",
						"default": ""
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.37.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.2"
	}
}
